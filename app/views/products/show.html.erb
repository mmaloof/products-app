<div class="product-show">
<h1>Item</h1>
<p>Name: <%= @product.name %></p>
<p>Description: <%= @product.description %> </p>
<p>Price: <%= number_to_currency (@product.price) %> </p>
<p>Sales Tax: <%= number_to_currency (@product.sales_tax) %></p>
<p>Total Price: <%= number_to_currency (@product.total) %></p>
<p><%= @product.sale_message%></p>
<img src="<%= @product.image %>" style="width:200px;">
<a href="/products">Back to all products</a>

<%= link_to "Edit this product", "/products/#{@product.id}/edit" %>
<%= link_to "Delete this shit", "/products/#{@product.id}", method: :delete %>
</div>

