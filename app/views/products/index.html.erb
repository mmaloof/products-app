<h1>Check out these dope products</h1>

<div class="row">
  <% @products.each do |equipment| %>
  

  <div class="col-md-4 product-card">
    <div class="well">
      <h3>Item: <a href="/products/<%= equipment.id %>"><%= equipment.name %></a></h3>
      <h3>Brand: <%= equipment.description_all_caps %></h3>
      <h3>Material: <%= equipment.material %></h3>
      <h3>Price: <%= number_to_currency (equipment.price) %></h3>
      <h4>Sales Tax: <%= number_to_currency (equipment.sales_tax) %></h4>
      <h3>Total Price: <%= number_to_currency (equipment.total) %></h3>
      <h3><%= equipment.sale_message %>
        <img src="<%= equipment.image %>" style="width:200px;">
      </div>
    </div>



    <%end%>
  </div>

