<h1>Add a new product</h1>
<%= form_tag '/products', method: :post do %>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price %>
  </div>
  <div>
    <%= label_tag :material %>
    <%= text_field_tag :material %>
  </div>
  <div>
    <%= submit_tag "Add Product" %>
  </div>

<%= link_to "Back to all products", "/products" %>

<% end %>